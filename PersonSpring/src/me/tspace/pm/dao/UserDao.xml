<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  

<mapper namespace="me.tspace.pm.dao.UserDao">  
  
    <resultMap type="User" id="userResultMap">  
        <id property="userID" column="userID"/>  
        <result property="userName" column="userName"/>  
        <result property="password" column="password"/>  
        <result property="realName" column="realName"/>
        <result property="realName" column="realName"/>  
        <result property="phoneNum" column="phoneNum"/>  
        <result property="birthday" column="birthday"/>  
        <result property="level" column="level"/>    
        <result property="registerDate" column="registerDate"/>   
    </resultMap>  
      
    <!-- 查询用户，by ID -->  
    <select id="getUserByID" parameterType="int" resultType="User" resultMap="userResultMap">  
        <![CDATA[ 
            select * from user a where a.userID = #{userID}  
        ]]>   
    </select>  
    
    <!-- 查询用户，byName -->  
    <select id="getUserByName" parameterType="String" resultType="User" resultMap="userResultMap">  
        <![CDATA[ 
            select * from user a where a.userName = #{userName}  
        ]]>   
    </select>  
    
    <!-- 查询用户列表 -->  
    <select id="getAllUsers"  resultType="User" resultMap="userResultMap">  
        <![CDATA[ 
            SELECT * from user 
        ]]>   
    </select>  
    
    <insert id="create" parameterType="me.tspace.pm.model.User" useGeneratedKeys="true" keyProperty="userID">   
     <![CDATA[ 
            insert into user (userName,password,realName,phoneNum,birthday,level,registerDate)   
			values (#{userName},#{password},#{realName},#{phoneNum},#{birthday},#{level},#{registerDate})   
        ]]> 
	</insert>  
      
</mapper>  